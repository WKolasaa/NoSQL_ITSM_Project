        xmlns:local="clr-namespace:IncidentManagementApplication.resources.windows"
        mc:Ignorable="d"
        Title="AddAndUpdateTicket" Height="450" Width="800">
    <Grid Height="434" VerticalAlignment="Top">
        <Label Content="ID" HorizontalAlignment="Left" Margin="133,4,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.315,0.024" FontSize="18"/>
