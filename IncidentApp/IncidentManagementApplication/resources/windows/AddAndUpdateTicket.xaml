        <Label Content="Incident Type" HorizontalAlignment="Left" Margin="133,254,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Reporter" HorizontalAlignment="Left" Margin="133,304,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="133,354,0,0" VerticalAlignment="Top" FontSize="18"/>
